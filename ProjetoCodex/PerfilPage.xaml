<Window x:Class="ProjetoCodex.PerfilPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetoCodex"
        mc:Ignorable="d"
        Title="PerfilPage" Height="720" Width="1280" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <Image HorizontalAlignment="Center" Height="720" VerticalAlignment="Center" Width="1280" Source="/TelaPerfilUser.png" Margin="-1,0,0,0">
            <Image.OpacityMask>
                <ImageBrush ImageSource="/TelaPerfilUser.png"/>
            </Image.OpacityMask>
        </Image>
        <Button Content="" HorizontalAlignment="Left" Margin="97,418,0,0" VerticalAlignment="Top" Height="60" Width="123" Click="Button_Click">
            <Button.OpacityMask>
                <ImageBrush/>
            </Button.OpacityMask>
            <Button.Background>
                <ImageBrush ImageSource="/ImageBotaoPerfil.png"/>
            </Button.Background>
        </Button>
        <Button Content="Button" HorizontalAlignment="Left" Margin="97,621,0,0" VerticalAlignment="Top" Width="123" Height="60" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="Button_Click_1">
            <Button.Background>
                <ImageBrush ImageSource="/ImageBotaoLogout.png"/>
            </Button.Background>
        </Button>
        <TextBox x:Name="txtNome" HorizontalAlignment="Left" Margin="110,290,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Margin="110,336,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtIdade" HorizontalAlignment="Left" Margin="110,313,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="CONFIGURAÇÃO" HorizontalAlignment="Left" Margin="97,558,0,0" VerticalAlignment="Top" Width="123" Height="42" Click="Button_Click_2"/>
        <Button Content="Notificação" HorizontalAlignment="Left" Margin="97,496,0,0" VerticalAlignment="Top" Width="123" Height="39" Click="Button_Click_3"/>
        <Button Content="HOME" HorizontalAlignment="Left" Margin="68,0,0,0" VerticalAlignment="Top" Width="140" Height="93" Click="Button_Click_4"/>
        <ListBox Name="lstComentarios" ItemsSource="{Binding PostagensDoUsuarioLogado}" Margin="325,290,278,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Autor}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Conteudo}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Window>
